@model List<NetCoreModels.ViewModel.TimeRecordViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header"><h5>Time Records<a asp-action="Create" class="float-right btn btn-sm btn-success">Create New</a></h5></div>
    <div class="card-body">
        @Html.ValidationMessage("error", new { @class = "text-danger" })
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().StartDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().EndDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().EmployeeName)
                    </th>
                    <th width="10"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="tr_@item.TimeRecordID">
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeName)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                </button>
                                <div class="dropdown-menu">
                                    <a asp-action="Edit" asp-route-id="@item.TimeRecordID" class="dropdown-item">Edit</a>
                                    <a href="#" class="dropdown-item text-danger" onclick="showDeleteModal(@item.TimeRecordID)">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModel" tabindex="-1" role="dialog" aria-labelledby="deleteModel-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="deleteModel-label">Delete Record</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-body">
                <p>Are you sure you want to remove this entry? This cannot be undone. </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteRecord()">Delete</button>
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <environment include="Development">
        <script src="~/js/TimeRecord/Index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/TimeRecord/Index.min.js"></script>
    </environment>
} 
@section Styles{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}