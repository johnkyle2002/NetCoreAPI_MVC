@model List<NetCoreModels.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header"><h5>Employee List  <a asp-action="Create" class="float-right btn btn-sm btn-success">Create New</a></h5></div>
    <div class="card-body">
        @Html.ValidationMessage("error", new { @class = "text-danger" })
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().LastName)
                    </th>
                    <th width="10"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="tr_@item.EmployeeID">
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                </button>
                                <div class="dropdown-menu">
                                    <a asp-action="Edit" asp-route-id="@item.EmployeeID" class="dropdown-item">Edit</a>
                                    <a href="#" class="dropdown-item text-danger" onclick="showDeleteModal(@item.EmployeeID)">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModel" tabindex="-1" role="dialog" aria-labelledby="deleteModel-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="deleteModel-label">Delete Record</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-body">
                <p>Are you sure you want to remove this entry? This cannot be undone. </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteRecord()">Delete</button>
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <environment include="Development">
        <script src="~/js/Employees/Index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Employees/Index.min.js"></script>
    </environment>
} 